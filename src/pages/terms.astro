---
import { config } from '../config';
import en from '../i18n/en';
import ko from '../i18n/ko';

const { siteName, siteUrl, contactEmail, lastUpdated, locale } = config;
const t = locale === 'ko' ? ko.terms : en.terms;
const s = t.sections;
---

<html lang={locale}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{t.title} - {siteName}</title>
  <meta name="description" content={`${t.title} for ${siteName}`} />
  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.6;
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
      color: #333;
    }
    h1 { font-size: 2rem; margin-bottom: 0.5rem; }
    h2 { font-size: 1.25rem; margin-top: 2rem; color: #1a1a1a; }
    .last-updated { color: #666; font-size: 0.9rem; margin-bottom: 2rem; }
    a { color: #0066cc; }
    ul { padding-left: 1.5rem; }
    li { margin: 0.5rem 0; }
    section { margin-bottom: 1.5rem; }
  </style>
</head>
<body>
  <main>
    <h1>{t.title}</h1>
    <p class="last-updated">
      {locale === 'ko' ? '최종 업데이트' : 'Last updated'}: {lastUpdated}
    </p>

    <section>
      <h2>{s.acceptance.title}</h2>
      <p>{s.acceptance.content(siteName, siteUrl)}</p>
    </section>

    <section>
      <h2>{s.serviceDescription.title}</h2>
      <p>{s.serviceDescription.content(siteName)}</p>
    </section>

    <section>
      <h2>{s.userObligations.title}</h2>
      <p>{s.userObligations.intro(siteName)}</p>
      <ul>
        {s.userObligations.items.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </section>

    <section>
      <h2>{s.intellectualProperty.title}</h2>
      <p>{s.intellectualProperty.content(siteName)}</p>
    </section>

    <section>
      <h2>{s.termination.title}</h2>
      <p>{s.termination.content(siteName)}</p>
    </section>

    <section>
      <h2>{s.disclaimer.title}</h2>
      <p>{s.disclaimer.content(siteName)}</p>
    </section>

    <section>
      <h2>{s.limitationOfLiability.title}</h2>
      <p>{s.limitationOfLiability.content(siteName)}</p>
    </section>

    <section>
      <h2>{s.governingLaw.title}</h2>
      <p>{s.governingLaw.content()}</p>
    </section>

    <section>
      <h2>{s.changes.title}</h2>
      <p>{s.changes.content(siteName)}</p>
    </section>

    <section>
      <h2>{s.contact.title}</h2>
      <p>
        {s.contact.content(contactEmail)}{' '}
        <a href={`mailto:${contactEmail}`}>{contactEmail}</a>
      </p>
    </section>
  </main>
</body>
</html>
